{
  "name": "gabin",
  "version": "0.2.0",
  "packageManager": "pnpm@7.27.0",
  "description": "Automate camera switching with OBS, Bitfocus Companion and any audio api.",
  "author": "OneClickStudio",
  "homepage": "https://oneclickstudio.fr",
  "repository": "github:one-click-studio/gabin",
  "main": "./src/main/index.ts",
  "bin": "./build/main/index.js",
  "scripts": {
    "installAll": "pnpm i && cd ./src/render && pnpm i",
    "iAll": "pnpm i && cd ./src/render && pnpm i",
    "typecheck": "tsc --noEmit -p tsconfig.json --composite false",
    "clean": "pnpm clean:build && pnpm clean:dist",
    "clean:build": "shx rm -rf ./build",
    "clean:dist": "shx rm -rf ./dist",
    "dev": "cross-env GABIN_CLIENT_PORT=5999 concurrently \"pnpm run dev:client\" \"pnpm run dev:server\"",
    "dev:server": "npx nodemon",
    "dev:client": "cd ./src/render && pnpm dev",
    "build": "pnpm clean:build && concurrently \"pnpm run build:client\" \"pnpm run build:server\"",
    "build:server": "pnpm clean:build && tsc && shx cp -R ./src/resources ./build/resources",
    "build:client": "cd ./src/render && pnpm build && cd ../.. && shx mkdir -p ./build/render/dist && shx cp -R ./src/render/dist ./build/render",
    "preview": "pnpm run build && node build/main/index.js",
    "pkg:mac": "pnpm clean:dist && pnpm build && pkg . -t x64 && embler",
    "pkg:macApp": "./buildMacApp.sh x64",
    "pkg:win": "pnpm clean:dist && pnpm build && pkg . -t host && shx mv ./dist/gabin.exe ./dist/gabin-win.exe",
    "app": "./dist/gabin"
  },
  "pkg": {
    "scripts": "build/main/*.js",
    "assets": [
      "build/render/**/*",
      "build/resources/**/*"
    ],
    "outputPath": "dist"
  },
  "embler": {
    "realName": "Gabin",
    "appId": "com.oneclickstudio.gabin",
    "mac": {
      "binary": "dist/gabin",
      "icon": "./src/resources/icons/icon.png",
      "formats": ["app", "dmg", "zip", "tar.gz"],
      "embler.mac.category": "public.app-category.utilities"
    }
  },
  "dependencies": {
    "audify": "^1.8.1",
    "deep-eql": "^4.1.3",
    "dotenv": "^16.0.3",
    "finalhandler": "^1.2.0",
    "obs-websocket-js": "^5.0.2",
    "onnxruntime-node": "^1.13.1",
    "rxjs": "^7.8.0",
    "serve-static": "^1.15.0",
    "simple-json-db": "^2.0.0",
    "socket.io": "^4.6.0",
    "systray": "^1.0.5",
    "webrtcvad": "^1.0.1"
  },
  "devDependencies": {
    "@types/deep-eql": "^4.0.0",
    "@types/finalhandler": "^1.2.0",
    "@types/node": "^18.13.0",
    "@types/serve-static": "^1.15.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "embler": "^1.0.0",
    "nodemon": "^2.0.20",
    "pkg": "^5.8.0",
    "playwright": "^1.29.2",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
