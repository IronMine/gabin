{
  "name": "gabin",
  "version": "0.2.0",
  "packageManager": "pnpm@7.27.0",
  "description": "Automate camera switching with OBS, Bitfocus Companion and any audio api.",
  "author": "OneClickStudio",
  "homepage": "https://oneclickstudio.fr",
  "repository": "github:one-click-studio/gabin",
  "main": "./src/main/index.ts",
  "bin": "./build/main/index.js",
  "scripts": {
    "installAll": "pnpm i && cd ./src/render && pnpm i",
    "iAll": "pnpm i && cd ./src/render && pnpm i",
    "typecheck": "tsc --noEmit -p tsconfig.json --composite false",
    "clean": "pnpm clean:build && pnpm clean:dist",
    "clean:build": "shx rm -rf ./build",
    "clean:dist": "shx rm -rf ./dist",
    "dev": "cross-env GABIN_CLIENT_PORT=5999 concurrently \"pnpm run dev:client\" \"pnpm run dev:server\"",
    "dev:server": "npx nodemon",
    "dev:client": "cd ./src/render && pnpm dev",
    "build": "pnpm clean:build && concurrently \"pnpm run build:client\" \"pnpm run build:server\"",
    "build:server": "pnpm clean:build && tsc && shx cp -R ./src/resources ./build/resources",
    "build:client": "cd ./src/render && pnpm build && cd ../.. && shx mkdir -p ./build/render/dist && shx cp -R ./src/render/dist ./build/render",
    "preview": "pnpm run build && node build/main/index.js",
    "mac:all": "pnpm mac:pkg-pre && pnpm mac:pkg && pnpm mac:app-pre && pnpm mac:app && pnpm mac:app-post && pnpm mac:dmg",
    "mac:pkg-pre": "pnpm clean:dist && pnpm build",
    "mac:pkg": "pnpm mac:pkg-arm64 && pnpm mac:pkg-x64",
    "mac:pkg-x64": "pkg . -t macos-x64 && shx mv ./dist/gabin ./dist/gabin-mac-x64",
    "mac:pkg-arm64": "pkg . -t macos-arm64 && shx mv ./dist/gabin ./dist/gabin-mac-arm64",
    "mac:app-pre": "pnpm i -D embler",
    "mac:app": "pnpm mac:app-arm64 && pnpm mac:app-x64",
    "mac:app-x64": "node buildMacApp.js mac-x64",
    "mac:app-arm64": "node buildMacApp.js mac-arm64",
    "mac:app-post": "pnpm rm embler",
    "mac:dmg": "pnpm mac:dmg-arm64 && pnpm mac:dmg-x64",
    "mac:dmg-arm64": "hdiutil create /tmp/tmp.dmg -ov -volname \"Gabin-mac-arm64\" -fs HFS+ -srcfolder \"./dist/Gabin-mac-arm64.app/\" && hdiutil convert /tmp/tmp.dmg -format UDZO -o ./dist/Gabin-mac-arm64.dmg",
    "mac:dmg-x64": "hdiutil create /tmp/tmp.dmg -ov -volname \"Gabin-mac-x64\" -fs HFS+ -srcfolder \"./dist/Gabin-mac-x64.app/\" && hdiutil convert /tmp/tmp.dmg -format UDZO -o ./dist/Gabin-mac-x64.dmg",
    "win:pkg": "pnpm clean:dist && pnpm build && pkg . -t host && shx mv ./dist/gabin.exe ./dist/gabin-win.exe"
  },
  "pkg": {
    "scripts": "build/main/*.js",
    "assets": [
      "build/render/**/*",
      "build/resources/**/*",
      "node_modules/.pnpm/onnxruntime-node@*/node_modules/onnxruntime-node/bin/napi-v3/**/**/*",
      "node_modules/.pnpm/webrtcvad@*/node_modules/webrtcvad/build/Release/*",
      "node_modules/.pnpm/audify@*/node_modules/audify/build/Release/*",
      "node_modules/.pnpm/rxjs@*/node_modules/tslib/tslib.js"
    ],
    "outputPath": "dist"
  },
  "embler": {
    "realName": "Gabin",
    "appId": "com.oneclickstudio.gabin",
    "mac": {
      "binary": "dist/gabin",
      "icon": "./src/resources/icons/icon.png",
      "formats": [
        "app"
      ],
      "category": "public.app-category.video"
    }
  },
  "dependencies": {
    "audify": "^1.8.1",
    "deep-eql": "^4.1.3",
    "dotenv": "^16.0.3",
    "finalhandler": "^1.2.0",
    "obs-websocket-js": "^5.0.2",
    "onnxruntime-node": "^1.13.1",
    "rxjs": "^7.8.0",
    "serve-static": "^1.15.0",
    "simple-json-db": "^2.0.0",
    "socket.io": "^4.6.0",
    "systray": "^1.0.5",
    "webrtcvad": "^1.0.1"
  },
  "devDependencies": {
    "@types/deep-eql": "^4.0.0",
    "@types/finalhandler": "^1.2.0",
    "@types/node": "^18.13.0",
    "@types/serve-static": "^1.15.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.20",
    "pkg": "github:vercel/pkg",
    "playwright": "^1.29.2",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
